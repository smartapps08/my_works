<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10px"
        android:orientation="vertical" >

        <LinearLayout
            
            android:id="@+id/textLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/leather"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/location_text_line2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:lines="2"
                android:paddingTop="40px"
                android:textColor="@color/gray"
                android:textSize="50sp" />
        </LinearLayout>

        <LinearLayout
            
            android:id="@+id/noLocationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/leather"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/noLocationText"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:lines="5"
                android:paddingLeft="50px"
                android:paddingRight="50px"
                android:paddingTop="40px"
                android:textColor="@color/gray"
                android:textSize="24sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/qiblaFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textLayout"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/qiblaLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/frameImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/frame" />

                <ImageView
                    android:id="@+id/compassImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/rosetta" />

                <ImageView
                    android:id="@+id/arrowImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow" />
            </FrameLayout>
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>